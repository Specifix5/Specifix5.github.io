---
import Icon from "./Icon.astro"

const { link, iconurl } = Astro.props
---

<a href={link} target="_blank" rel="noopener noreferrer">
  <Icon icon={iconurl} />
</a>

<style type="scss">
  a {
    margin: 0px;
    svg {
      width: 1.8em;
      height: 1.8em;
      margin: -0.75em;
      margin-right: 0.2em;
      margin-left: 0.2em;
      transform: translateY(-0.2em);
    }
    color: inherit;
  }
</style>